<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:textAlignment="center"
        android:text="@string/AddWork"
        android:id="@+id/addWorkDialogTitleTextView"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/addWorkDialogWorkCodeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Kod zadania: "
            android:textAlignment="center"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/addWorkDialogWorkCodeEditText"
            android:inputType="number"
            android:digits="0123456789.,"
            android:width="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/addWorkDialogNameLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Nazwa: "
            android:textAlignment="center"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/addWorkNameCodeEditText"
            android:width="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/addWorkDialogNormLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Norma: "
            android:textAlignment="center"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/addWorkNormCodeEditText"
            android:inputType="number"
            android:digits="0123456789.,"
            android:width="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/addWorkDialogCancelButton"
            android:text="@string/Cancel"
            android:layout_weight="1"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/addWorkDialogAddButton"
            android:text="@string/Add"
            style="@style/ButtonStyle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:textAlignment="center"
        android:id="@+id/showJobDialogTitleTextView"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/showJobDialogDescriptionLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Minut: "
            android:textAlignment="center"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/showJobDialogTimeTextView"
            android:width="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/showJobDialogWorkIdLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Robota: "
            android:textAlignment="center"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/showJobDialogChooseWorkTextView"
            android:width="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
        
        <LinearLayout
        android:padding="10dp"
        android:id="@+id/showJobDialogQuantityLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Ilość: "
            android:width="100dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/showJobDialogQuantityTextView"
            android:width="200dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"/>

    </LinearLayout>
        
        <LinearLayout
        android:id="@+id/showJobDialogJobTypeLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Typ: "
            android:textAlignment="center"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:width="200dp"
            android:id="@+id/showJobDialogJobTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:text="@string/IsNormalized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showJobDialogIsNormalizedTextView"
        android:layout_gravity="center_horizontal"
    />

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/showJobDialogCloseButton"
            android:text="@string/Close"
            style="@style/ButtonStyle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/showJobDialogEditButton"
            android:text="@string/Edit"
            style="@style/ButtonStyle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/showJobDialogDeleteButton"
            android:text="@string/Delete"
            android:background="@drawable/buttonShapeRed"
            style="@style/ButtonStyle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/showJobDialogAddButton"
            android:text="@string/Add"
            android:background="@drawable/buttonShapeGreen"
            style="@style/ButtonStyle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
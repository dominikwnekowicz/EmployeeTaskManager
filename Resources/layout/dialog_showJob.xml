
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:textAlignment="center"
        android:id="@+id/showJobDialogTitleTextView"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/showJobDialogDescriptionLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Minut: "
            android:textAlignment="textEnd"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/showJobDialogTimeTextView"
            android:textAlignment="textStart"
            android:width="200dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/showJobDialogWorkIdLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Robota: "
            android:textAlignment="textEnd"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/showJobDialogChooseWorkTextView"
            android:textAlignment="textStart"
            android:width="200dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
        
        <LinearLayout
        android:padding="10dp"
        android:id="@+id/showJobDialogQuantityLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Ilość: "
            android:width="100dp"
            android:textAlignment="textEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/showJobDialogQuantityTextView"
            android:textAlignment="textStart"
            android:width="200dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
        
        <LinearLayout
        android:id="@+id/showJobDialogNeedTodayLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Do normy: "
            android:textAlignment="textEnd"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:width="200dp"
            android:paddingLeft="15dp"
            android:textAlignment="textStart"
            android:id="@+id/showJobDialogNeedTodayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/showJobDialogIsNormalizedLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Normowane: "
            android:textAlignment="textEnd"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/IsNormalized"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/showJobDialogIsNormalizedTextView"
            android:width="200dp"
            android:paddingLeft="15dp"
            android:textAlignment="textStart"
         />

    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

        <Button
            android:id="@+id/showJobDialogCloseButton"
            android:text="@string/Close"
            style="@style/ButtonStyle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/showJobDialogEditButton"
            android:text="@string/Edit"
            style="@style/ButtonStyle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/showJobDialogDeleteButton"
            android:text="@string/Delete"
            android:background="@drawable/buttonShapeRed"
            style="@style/ButtonStyle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/showJobDialogAddButton"
            android:text="@string/Add"
            android:background="@drawable/buttonShapeGreen"
            style="@style/ButtonStyle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
    android:padding="10dp"
    android:id="@+id/showJobDialogAddQuantityLinearLayout"
    android:visibility="gone"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:text="Dodaj: "
            android:width="100dp"
            android:textAlignment="textEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

        <NumberPicker
            android:id="@+id/showJobDialogAddQuantityNumberPicker"
            android:width="200dp"
            android:alpha="30"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"/>

    </LinearLayout>
</LinearLayout>